{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Remote Docker Attach",
        "type": "python",
        "request": "attach",
        "connect": {
          "host": "localhost",
          "port": 5678
        },
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}/app",  // 로컬 프로젝트 폴더
            "remoteRoot": "/app/app"                // 컨테이너 내 app 폴더
          }
        ]
      }
    ]
  }